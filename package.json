{
  "name": "@ourparentcenter/moleculer-decorators-extended",
  "version": "2.0.0",
  "description": "decorators for moleculer",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "yarn eslint --fix",
    "dev": "nodemon --delay 2000 -e ts --exec \"npm run build\"",
    "test": "jest --coverage --forceExit --detectOpenHandles",
    "test:ci": "jest --ci --reporters='default' --reporters='../github-actions-reporter'",
    "format": "pretty-quick \"*.ts\" --write --staged",
    "ci": "yarn clean && yarn install",
    "clean": "yarn clean:packages && yarn install",
    "clean:packages": "rm -fr yarn.lock package-lock.json dist node_modules",
    "compile": "yarn clean && tsc && node dist/index.js",
    "preversion": "run-s lint test build",
    "postversion": "git push && git push --follow-tags",
    "build:clean": "rimraf dist bin",
    "build:dist": "rollup -c",
    "build:dts": "dts-bundle-generator -o dist/index.d.ts src/index.ts",
    "build": "yarn build:clean && run-p build:dts build:dist",
    "release": "np"
  },
  "author": "Matthew Marino <matthew.asdos@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ourparentcenter/moleculer-decorators-extended.git"
  },
  "keywords": [
    "microservices",
    "microservice",
    "decorator",
    "es6",
    "typescript",
    "moleculer"
  ],
  "bugs": {
    "url": "https://github.com/ourparentcenter/moleculer-decorators-extended/issues"
  },
  "homepage": "https://github.com/ourparentcenter/moleculer-decorators-extended#readme",
  "dependencies": {
    "moleculer": "^0.14.28"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.3",
    "@commitlint/config-conventional": "17.4.3",
    "@rollup/plugin-typescript": "11.0.0",
    "@types/jest": "29.4.0",
    "@types/node": "18.13.0",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.52.0",
    "@typescript-eslint/parser": "5.52.0",
    "dts-bundle-generator": "7.2.0",
    "esbuild": "^0.17.8",
    "eslint": "8.34.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-sonarjs": "0.18.0",
    "husky": "8.0.3",
    "jest": "29.4.2",
    "jest-chain": "^1.1.6",
    "jest-extended": "^3.2.3",
    "lint-staged": "13.1.2",
    "moleculer-db": "0.8.22",
    "moleculer-web": "0.10.5",
    "nodemon": "2.0.20",
    "np": "^7.6.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.8.4",
    "pretty-quick": "3.1.3",
    "reflect-metadata": "0.1.13",
    "rimraf": "4.1.2",
    "rollup": "3.15.0",
    "rollup-plugin-auto-external": "2.0.0",
    "rollup-plugin-esbuild": "5.0.0",
    "rollup-plugin-node-builtins": "2.1.2",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "collectCoverage": false,
    "rootDir": "./test",
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json"
        }
      ]
    },
    "testRegex": ".*\\.(test|spec).(ts|js)$",
    "setupFiles": [],
    "setupFilesAfterEnv": [
      "jest-chain",
      "jest-extended/all"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint:fix && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src,cli}/**/*.ts": [
      "yarn format"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
